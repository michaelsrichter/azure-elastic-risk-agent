# Azure Environment Configuration
# Copy this file to .azure/<env-name>/.env and fill in your values

# ============================================================================
# REQUIRED: Azure Location and Environment
# ============================================================================
AZURE_ENV_NAME=dev
AZURE_LOCATION=eastus
AZURE_PRINCIPAL_ID=your-user-principal-id

# ============================================================================
# REQUIRED: Elastic Search Configuration
# ============================================================================
# The MCP server URL for your Elastic cluster
MCP_SERVER_URL=https://your-cluster.kb.eastus.azure.elastic.cloud/api/agent_builder/mcp

# The API key for authenticating with Elastic
ELASTIC_API_KEY=your-elasticsearch-api-key-here

# ============================================================================
# OPTIONAL: AI Agent Configuration (with defaults)
# ============================================================================
# Pre-configured Agent ID (leave empty to create new agent on each run)
AI_AGENT_ID=

# Name of the AI agent
AI_AGENT_NAME=RiskAgent-Demo

# MCP Server Label
MCP_SERVER_LABEL=elastic_search_mcp

# Comma-separated list of allowed MCP tools
MCP_ALLOWED_TOOLS=azure_elastic_risk_agent_search_docs,azure_elastic_risk_agent_docs_list

# ============================================================================
# OPTIONAL: Azure Content Safety Configuration
# ============================================================================
# Content Safety endpoint (leave empty if not using)
CONTENT_SAFETY_ENDPOINT=

# Content Safety subscription key (leave empty if not using)
CONTENT_SAFETY_SUBSCRIPTION_KEY=

# Jailbreak detection mode: Audit or Blocking
CONTENT_SAFETY_JAILBREAK_DETECTION_MODE=Audit

# ============================================================================
# OPTIONAL: Custom Agent Instructions
# ============================================================================
# Leave commented to use default instructions defined in main.bicep
# AI_AGENT_INSTRUCTIONS="Your custom instructions here..."

