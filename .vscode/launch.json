{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Attach to .NET Functions",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:azureFunctions.pickProcess}",
            "preLaunchTask": "func: host start"
        },
        {
            "name": "Launch Functions (Start and Debug)",
            "type": "coreclr",
            "request": "launch",
            "program": "func",
            "args": [
                "host",
                "start"
            ],
            "cwd": "${workspaceFolder}/src/ElasticOn.RiskAgent.Demo.Functions",
            "console": "integratedTerminal",
            "stopAtEntry": false,
            "preLaunchTask": "build"
        }
    ]
}