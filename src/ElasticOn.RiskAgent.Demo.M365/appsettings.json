{
"AIServices": {
  "AgentID": "YOUR_AGENT_ID_HERE",
  "ProjectEndpoint": "https://YOUR-PROJECT.services.ai.azure.com/api/projects/YOUR-PROJECT",
  "ModelId": "gpt-4.1-mini",
  "Agent": {
    "Name": "RiskAgent",
    "Instructions": "You answer questions about Risk based on what you find in the context."
  },
  "MCPTool": {
    "ServerLabel": "elastic_search_mcp",
    "ServerUrl": "https://YOUR-ELASTIC-CLUSTER.kb.eastus.azure.elastic.cloud/api/agent_builder/mcp",
    "AllowedTools": [
      "azure_elastic_risk_agent.search_docs"
    ]
  },
  "ElasticApiKey": "YOUR_ELASTIC_API_KEY_HERE",
  "ContentSafety": {
    "Endpoint": "https://YOUR-CONTENT-SAFETY.cognitiveservices.azure.com/",
    "SubscriptionKey": "YOUR_CONTENT_SAFETY_SUBSCRIPTION_KEY_HERE",
    "JailbreakDetectionMode": "Enforce"
  }
},
  "AgentApplicationOptions": {
    "StartTypingTimer": false,
    "RemoveRecipientMention": false,
    "NormalizeMentions": false
  },

  "TokenValidation": {
    "Audiences": [
      "{{ClientId}}" // this is the Client ID used for the Azure Bot
    ]
  },

  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.Agents": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "AllowedHosts": "*",
  "Connections": {
    "BotServiceConnection": {
      "Settings": {
        "AuthType": "UserManagedIdentity", // this is the AuthType for the connection, valid values can be found in Microsoft.Agents.Authentication.Msal.Model.AuthTypes.
        "ClientId": "{{BOT_ID}}", // this is the Client ID used for the connection.
        "TenantId": "{{BOT_TENANT_ID}}",
        "Scopes": [
          "https://api.botframework.com/.default"
        ]
      }
    }
  },
  "ConnectionsMap": [
    {
      "ServiceUrl": "*",
      "Connection": "BotServiceConnection"
    }
  ]
}
